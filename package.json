{
  "name": "org_viewer_for_electron",
  "version": "0.1.0",
  "description": "use org_mode for GUI",
  "main": "dist/main.js",
  "scripts": {
    "start": "run-s clean build serve",
    "clean": "rimraf dist",
    "build": "cross-env NODE_ENV=\"development\" webpack --progress",
    "serve": "electron .",
    "product_build": "cross-env NODE_ENV=\"production\" webpack --progress --mode=production",
    "product_package_mac": "electron-builder --mac --x64",
    "product_clean": "rimraf build_dist",
    "packaged_for_mac": "run-s product_clean product_build product_package_mac"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/mini-css-extract-plugin": "^2.0.1",
    "@types/node": "^14.17.5",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.7",
    "electron": "^13.1.6",
    "electron-builder": "^22.11.7",
    "html-webpack-plugin": "^5.3.2",
    "mini-css-extract-plugin": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "webpack": "^5.44.0",
    "webpack-cli": "^4.7.2"
  },
  "dependencies": {
    "bootstrap": "^5.0.2",
    "react": "^17.0.2",
    "react-bootstrap": "^2.0.0-beta.4",
    "react-dom": "^17.0.2"
  },
  "build": {
    "appId": "com.yuu_1st.org_viewer_for_electron",
    "directories": {
      "output": "build_dist"
    },
    "files": [
      "icon",
      "dist",
      "package.json",
      "package-lock.json"
    ],
    "mac": {
      "icon": "icon/icon.icns",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "icon/icon.ico",
      "target": "nsis"
    },
    "nsis":{
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
